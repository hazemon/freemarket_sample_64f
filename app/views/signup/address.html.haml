.signup-wrapper
  .single-header
    %h1.single-header__logo
      = link_to root_path do
        = image_tag '/fmarket_logo_red.svg', width: "185px"
    %nav.progress-bar3
      %ol.clearfix
        %li.progress-bar3__active
          会員情報
          .progress-bar3__active__status
        %li.progress-bar3__active__phone-number
          電話番号認証
          .progress-bar3__active__status__phone-number
        %li.progress-bar3__active__address
          お届け先住所入力
          .progress-bar3__active__status__address
        %li.progress-bar3__active__payment
          支払い方法
          .progress-bar3__active__status__payment
        %li.progress-bar3__active__complete
          完了
          .progress-bar3__active__status__complete
  .signup-main3      
    .signup-main3__head 発送元・お届け先住所入力
    .a-3
      = form_with local: true, url: address_add_signup_index_path do |f|
        .signup3__form
          %p
            お名前
          %span.hissu 必須 
        = f.text_field :surname, autocomplete: "l_name_kanji", placeholder: '例) 山田', class: "signup3__form__input" 
        = f.text_field :first_name, autocomplete: "f_name_kanji", placeholder: '例) 太郎', class: "signup3__form__input"
        .signup3__form
          %p
            お名前カナ
          %span.hissu 必須 
        = f.text_field :surname_kana, autocomplete: "l_name_kana", placeholder: '例) ヤマダ', class: "signup3__form__input" 
        = f.text_field :first_name_kana, autocomplete: "f_name_kana", placeholder: '例) タロウ', class: "signup3__form__input"
        .signup3__form
          %p
            郵便番号
          %span.hissu 必須 
        = f.text_field :post_code, autocomplete: "postal_code", placeholder: '例) 123-4567', class: "signup3__form__input"
        .signup3__form
          %p
            都道府県
          %span.hissu 必須
        %select.signup3__prefecture
          -# 仮置き
          %option{value: ""} ---
          %option{value: "1"} 東京都
        .signup3__form
          %p
            市区町村
          %span.hissu 必須 
        = f.text_field :city, autocomplete: "city", placeholder: '例) 横浜市緑区', class: "signup3__form__input"
        .signup3__form
          %p
            番地
          %span.hissu 必須 
        = f.text_field :street, autocomplete: "street", placeholder: '例) 青山1-1-1', class: "signup3__form__input"
        .signup3__form
          %p
            建物名
          %span.content__option 任意
        = f.text_field :building, autocomplete: "building", placeholder: '例) 柳ビル103', class: "signup3__form__input"
        .signup3__form
          %p
            電話番号
          %span.content__option 任意
        = f.phone_field :phone, class: "signup3__form__input", placeholder: "例）09012345678"
        %input.next-btn{type: 'submit',value: '次へ進む'}
  = render 'items/sub-footer'