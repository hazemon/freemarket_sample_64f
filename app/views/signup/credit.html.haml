.signup-wrapper
  .single-header
    %h1.single-header__logo
      = link_to root_path do 
        = image_tag '/fmarket_logo_red.svg', width: "185px"
    %nav.progress-bar4
      %ol.clearfix
        %li.progress-bar4__active
          会員情報
          .progress-bar4__active__status
        %li.progress-bar4__active__phone-number
          電話番号認証
          .progress-bar4__active__status__phone-number
        %li.progress-bar4__active__address
          お届け先住所入力
          .progress-bar4__active__status__address
        %li.progress-bar4__active__payment
          支払い方法
          .progress-bar4__active__status__payment
        %li.progress-bar4__active__complete
          完了
          .progress-bar4__active__status__complete
  .signup-main4
    .signup-main4__head お支払い方法
  .card-input-contents4
    = form_with id: "charge-form", local: true, url: credit_add_signup_index_path do |f|
      .card-input-content4
        .form-group
          %label
            カード番号
            %span.hissu
              必須
          = f.text_field :number, class: "input-default",  placeholder: "半角英数のみ",id: "number"
          %ul
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", size: "49x20",alt:"visa"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", size: "34x20",alt:"master-card"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", size: "30x20",alt:"saison-card"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", size: "32x20",alt:"jcb"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", size: "21x20",alt:"american_express"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", size: "32x20",alt:"dinersclub"
            %li 
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", size: "32x20",alt:"discover"
        .form-group
          %label
            有効期限
            %span.hissu
              必須
          .select-wrap
            .select-wrap-half
              = f.select :exp_month,[["01"], ["02"], ["03"], ["04"], ["05"], ["06"], ["07"], ["08"], ["09"], ["10"], ["11"], ["12"]], id: "exp_month"
              = fa_icon 'angle-down'
              %span
                月
            .select-wrap-half
              = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],id: "exp_year"
              = fa_icon 'angle-down'
              %span
                年
        .form-group
          %label
            セキュリティーコード
            %span.hissu
              必須
          = f.text_field :cvc, class: "cvc",  placeholder: "カード背面4桁もしくは3桁の番号",id:"cvc"
          .signup-seqcode
            .signup-seqcode-text
              ?
            %span
              カード背面の番号とは？
        = f.submit "次へ進む", class:"add-btn",id: "token_submit", type: "submit"
  = render 'items/sub-footer'