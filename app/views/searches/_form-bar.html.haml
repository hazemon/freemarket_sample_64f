.detail_search
  = search_form_for(@q,url: searches_detail_search_path) do |f|
    .detail_select_sort
      = f.select( :sorts, { '並び替え': 'id desc', '価格の安い順': 'price asc', '価格の高い順': 'price desc', '出品の古い順': 'updated_at asc', '出品の新しい順': 'updated_at desc' } , { onchange: 'this.form.submit()'} )
    .detail_search_form
      .detail_search__title
        %h3 詳細検索
      .detail_search__group
        .detail_search__group--label
          = fa_icon "search"
          %p キーワードを追加する
        = f.search_field :name_cont, class: "detail_search__group--form", placeholder: "例）値下げ"
      .detail_search__group
        .detail_search__group--label
          = fa_icon "search"
          %p 価格
        .detail_search__group--forms
          = f.search_field :price_gteq, class: "detail_search__group--form detail_form-mini", placeholder: "¥ Min"
          %p 〜
          = f.search_field :price_lteq, class: "detail_search__group--form detail_form-mini", placeholder: "¥ Max"
      .detail_search__group
        .detail_search__group--label
          = fa_icon "search"
          %p 商品の状態
        .detail_search__group--checkbox
          %label
            %input{type: "checkbox", class: "detail_condition-all detail_checkbox"}
            = 'すべて'
        .deteil_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '1', nil
            = '新品、未使用'
        .detail_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '2', nil
            = '未使用に近い'
        .detail_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '3', nil
            = '目立った傷や汚れなし'
        .detail_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '5', nil
            = 'やや傷や汚れあり'
        .detail_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '6', nil
            = '傷や汚れあり'
        .detail_search__group--checkbox
          %label
            = f.check_box :state_in, {multiple: true, class: "detail_condition detail_checkbox"}, '7', nil
            = '全体的に状態が悪い'
      
      .detail_search__group
        .detail_search__group--label
          = fa_icon "search"
          %p 配送料の負担
        .detail_search__group--checkbox
          %label
            %input{type: "checkbox", class: "detail_shipping_fee-all detail_checkbox"}
            = 'すべて'
        .detail_search__group--checkbox
          %label
            = f.check_box :fee_payer_in, {multiple: true, class: "detail_shipping_fee detail_checkbox"}, '1', nil
            = '送料込み'
        .detail_search__group--checkbox
          %label
            = f.check_box :fee_payer_in, {multiple: true, class: "detail_shipping_fee detail_checkbox"}, '2', nil
            = '着払い(購入者負担)'
      
      .detail_search__group
        .detail_search__group--label
          = fa_icon "search"
          %p 販売状況
        .detail_search__group--checkbox
          %label
            %input{type: "checkbox", class: "detail_checkbox"}
            = 'すべて'
        .detail_search__group--checkbox
          %label
            = f.check_box :status_in, {multiple: true, class: "detail_checkbox"}, '0', nil
            = '出品中'
        .detail_search__group--checkbox
          %label
            = f.check_box :status_in, {multiple: true, class: "detail_checkbox"}, '1', nil
            = '売却済み'
      .detail_search__btns
        .detail_search__btn--grey
          = link_to "クリア", "/searches",type: "button", class: "detail_search__btn"
        = f.submit "完了", class: "detail_search__btn  detail_search__btn--red"