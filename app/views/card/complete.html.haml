%body
  = render 'items/sub-header'
  .buy-main
    .buy-main__box
      .buy-content
        %h2.buy-content__completed-message_1
          = fa_icon 'clock'
          発送をお待ちください
          %h2.buy-content__completed-message_2
            出品者からの発送通知をお待ちください
            %h2.buy-content__header
              購入が完了しました
        .buy-content__product
          .buy-content__product__inner
            .buy-product-main
              .buy-product-image
                = image_tag "#{@item.images[0].image}", height: "80px" , width: "80px", class: "image-complete"
                .buy-product-name
                  = @item.name
                  %p.buy-price
                    ¥
                    = @item.price.to_s(:delimited)
                    %span 送料込み
            %form.buy-form
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 配送先
            .user-info-text
              = "〒#{@address.post_code.to_s}"
              %br
              = "#{@address.prefecture}  " + "#{@address.city}  " + "#{@address.street}  " + "#{@address.building}" 
              %br
              = "#{current_user.surname}" + " " + "#{current_user.first_name}"
            .user-info-fix
              = link_to "#" do
                変更する
                %span 
                = fa_icon 'chevron-right'
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 支払方法
            .user-info-text
              %img.visa{src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3296506464"}
              %br
              = "**** **** ****"+ "#{@default_card_information.last4}"
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            .user-info-fix
              = link_to "#" do
                変更する
                %span
                = fa_icon 'chevron-right'
        .buy-content__btn
          = link_to "トップページに戻る", '/' , class:"btn-default-z"
  = render 'items/sub-footer'